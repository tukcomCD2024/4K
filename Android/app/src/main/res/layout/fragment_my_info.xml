<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecentCallsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="42dp"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/large_title"
            android:layout_width="347dp"
            android:layout_height="45dp"
            android:text="@string/my_info_title"
            android:textAppearance="@style/recent_call_title"
            android:lineSpacingExtra="-5sp"
            android:gravity="top"
            android:layout_marginStart="46dp"
            />

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/settings_ac"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="149dp"
        android:clipToOutline="true"
        android:backgroundTint="@color/gray_white"
        android:background="@drawable/myinfo_setting_ac"
        >

        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/account_pho"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="20dp"
            android:clipToOutline="true"
            android:background="@drawable/circle_background"
            android:src="@drawable/default_myinfo"
            />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/content"
            android:layout_width="269dp"
            android:layout_height="65dp"
            android:layout_marginTop="6.5dp"
            android:layout_marginStart="90dp"
            android:backgroundTint="@color/gray_white"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:backgroundTint="@color/gray_white"
                android:lineSpacingExtra="-2sp"
                android:gravity="top"
                android:text="name_null"
                android:textAppearance="@style/name"

                />

            <TextView
                android:id="@+id/apple_id_ic"
                android:layout_width="253dp"
                android:layout_height="18dp"
                android:layout_marginTop="38dp"
                android:text="email_null"
                android:backgroundTint="@color/gray_white"
                android:textAppearance="@style/apple_id_ic"
                android:lineSpacingExtra="0sp"
                android:translationY="-0.13sp"
                android:gravity="top"
                />

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>